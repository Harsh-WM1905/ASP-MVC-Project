@model Bookstore.Models.CategoryModel

@{
    ViewData["Title"] = "CreateCategory";
}

<div class="container text-center">
    <h1>Dodaj nową kategorię</h1>

    <hr />
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <form asp-action="CreateCategory">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label">Kategoria</label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit"  value="Dodaj" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-primary" asp-action="Index">
        <i class="bi bi-arrow-left-square"></i>  Wróć do panelu administratora</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>


